{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "regions": ["cdg1"],
  "env": {
    "NEXT_PUBLIC_WEBSOCKET_URL": "@websocket_url"
  },
  "routes": [
    {
      "src": "/api/socket",
      "dest": "/api/socket.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}